                    success: function (data1) {
                        //alert(data);
                        //var result = $.parseJSON(data);
                        $.each(data1, function (key1, value1) {
                            //alert(JSON.stringify(value["Value"]));
                            $("#CourseId").append('<option value=' + value1["Key"] + '>' + value1["Value"] + '</option>');
                        });
                    }
                });
            });


        });
