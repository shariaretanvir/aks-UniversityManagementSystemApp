@model IEnumerable<UniversityManagementSystemApp.Models.Department>

@{
    ViewBag.Title = "ShowAllDepartment";
}

<h2>ShowAllDepartment</h2>

<div id="showDept" class="form-horizontal">

  

        <table id="grid-basic" class="table table-condensed table-hover table-striped">
            <thead>
                <tr>

                    <th data-column-id="code">Code</th>
                    <th data-column-id="name" data-order="desc">Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dept in Model)
                {
                <tr>
                    <td>@dept.Code</td>
                    <td>@dept.Name</td>
                </tr>
                }
            </tbody>
    </table>



</div>

@section scripts
{

    <script src="~/Scripts/jquery.bootgrid.min.js"></script>
    <script>
        $("#grid-basic").bootgrid({
            sorting: false,
            searchSetting : disable
          
        });
    </script>
}
